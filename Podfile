platform :ios, '10.0'

target 'ClaroChallenge' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  pod 'SwiftLint'
  pod "MotionAnimation", :git => 'https://github.com/nucci/MotionAnimation.git'
  pod "ElasticTransition", :git => 'https://github.com/nucci/ElasticTransition.git', :branch => 'swift4'

  # Pods for ClaroChallenge

  target 'ClaroChallengeTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'ClaroChallengeUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
